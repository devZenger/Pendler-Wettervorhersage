<Window x:Class="Pendler_Wettervorhersage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        
        xmlns:local="clr-namespace:Pendler_Wettervorhersage"
        mc:Ignorable="d"
        Title="Pendler Wettervorhersage" Height="550" Width="800">
       
    <Window.Resources>
        <!--Style for dark blue buttons-->
        <Style x:Key="DarkBlueButton" TargetType="Button">
            <!--Template for curved corner-->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.5" />
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!--Standard Settings-->
            <Setter Property="Background" Value="#133E87"/>
            <Setter Property="Foreground" Value="#FDFEFC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#FDFEFC"/>
            <!-- Triger for mouse over and click-->
            <Style.Triggers>
                <!--mouse over-->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#133E87"/>
                    <Setter Property="Foreground" Value="#F5AB0F"/>
                    <Setter Property="BorderBrush" Value="#F5AB0F"/>
                </Trigger>
                <!--mouse click-->
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Foreground" Value="#FDFEFC"/>
                    <Setter Property="BorderBrush" Value="#FDFEFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Background="#608BC1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition x:Name="SeachInputColumn"  Width="{Binding ColumWidth}"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05"/>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="0.05*"/>
            <RowDefinition/>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.02*"></RowDefinition>
            <RowDefinition Height="0.05*"/>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>


        <!--Hometown Time Input-->
        <local:SearchInputPanel DataContext="{Binding HometownInput, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Grid.Row="3"/>
       
        <!--WeatherInfopanels Hometown-->
        <Grid Grid.Column="4" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.05*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.05*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <local:WeatherInfoPanelView DataContext="{Binding HometownPanels[0]}" Grid.Column="0" Grid.Row="0"/>
            <local:WeatherInfoPanelView DataContext="{Binding HometownPanels[1]}" Grid.Column="0" Grid.Row="2"/>
            <local:WeatherInfoPanelView DataContext="{Binding HometownPanels[2]}" Grid.Column="2" Grid.Row="0"/>
            <local:WeatherInfoPanelView DataContext="{Binding HometownPanels[3]}" Grid.Column="2" Grid.Row="2"/>
            <local:WeatherInfoPanelView DataContext="{Binding HometownPanels[4]}" Grid.Column="4" Grid.Row="0"/>
            <local:WeatherInfoPanelView DataContext="{Binding HometownPanels[5]}" Grid.Column="4" Grid.Row="2"/>
        </Grid>
        
        <!--Workplace Input-->
        <local:SearchInputPanel DataContext="{Binding WorkplaceInput, UpdateSourceTrigger=PropertyChanged}"  Grid.Column="2" Grid.Row="7"/>
        <!--WeatherInfopanels Workplace-->
        <Grid Grid.Column="4" Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.05*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.05*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <local:WeatherInfoPanelView DataContext="{Binding WorkplacePanels[0]}" Grid.Column="0" Grid.Row="0"/>
            <local:WeatherInfoPanelView DataContext="{Binding WorkplacePanels[1]}" Grid.Column="0" Grid.Row="2"/>
            <local:WeatherInfoPanelView DataContext="{Binding WorkplacePanels[2]}" Grid.Column="2" Grid.Row="0"/>
            <local:WeatherInfoPanelView DataContext="{Binding WorkplacePanels[3]}" Grid.Column="2" Grid.Row="2"/>
            <local:WeatherInfoPanelView DataContext="{Binding WorkplacePanels[4]}" Grid.Column="4" Grid.Row="0"/>
            <local:WeatherInfoPanelView DataContext="{Binding WorkplacePanels[5]}" Grid.Column="4" Grid.Row="2"/>
        </Grid>


        <Grid Grid.Column="2" Grid.Row="2" Grid.RowSpan="7">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            

            <Viewbox Grid.Column="1" Grid.Row="1" Panel.ZIndex="5">
                <Button x:Name="SaveAndCall" Command="{Binding SaveAndGetWeatherCommand}"  Content="Speichern &amp; Abrufen" Style="{StaticResource DarkBlueButton}" Width="150" Height="30" Panel.ZIndex="1" />
            </Viewbox>



        </Grid>

        <!--Top Buttons-->
        <Grid  Grid.Column="4"  Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Infos" Style="{StaticResource DarkBlueButton}" Width="100" Height="30"/>
            <Button Grid.Column="2" Content="Aktualisieren" Style="{StaticResource DarkBlueButton}" Width="100" Height="30"/>
        </Grid>
        
        
        <!-- Expander -->
        <Grid Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4" HorizontalAlignment="Left">
            <ToggleButton Name="Expander" FontSize="14" Width="100" Height="30" Command="{Binding Expander}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=IsChecked}" >
                <ToggleButton.Style>
                <Style TargetType="ToggleButton">
                    <Setter Property="Template">
                        <Setter.Value>
                            <!--#F5AB0F-->
                            <ControlTemplate TargetType="ToggleButton">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="10">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.5" />
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <ContentPresenter.Effect>
                                
                                            <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="2" Opacity="0.5"/>
                                            </ContentPresenter.Effect>
                                        </ContentPresenter>
                            </Border>
                        </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                        <Setter Property="Background" Value="#F5AB0F"/>
                        <Setter Property="Content" Value="Off"/>
                    <Setter Property="BorderBrush" Value="#FDFEFC"/>
                        <Setter Property="Foreground" Value="#FDFEFC"/>
                    
                    <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Content" Value="Ausklappen"/>
                                
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Content" Value="Einklappen"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#876213"/>
                            </Trigger>
                  
                            
                            
                    </Style.Triggers>
                </Style>
                </ToggleButton.Style>

            </ToggleButton>
            
        </Grid>



        <!--Main panels for hometown and workplace-->
        <Border Background="#133E87" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" Grid.RowSpan="3" Panel.ZIndex="-2" CornerRadius="10" />
        <Border Background="#133E87" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="4" Grid.RowSpan="3" Panel.ZIndex="-2" CornerRadius="10" />
    </Grid>
</Window>
