<UserControl x:Class="Pendler_Wettervorhersage.SearchInputPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pendler_Wettervorhersage"
             mc:Ignorable="d" 
             d:DesignHeight="210" d:DesignWidth="260">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Border Background="#FF8E8EFF" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Grid.RowSpan="5" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.5" />
            </Border.Effect>
        </Border>

        <Border Background="#FFE3E3FF" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" CornerRadius="8" BorderBrush="DarkSlateGray" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.5" />
            </Border.Effect>
        </Border>
        <TextBox Name="LocationInput" Text="München" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Background="Transparent" BorderThickness="0" GotFocus="LocationTextBox_GotFocus" FontWeight="Bold" Margin="0,1,0,1"/>

        <Grid Grid.Column="2" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.9*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border Background="#FFE3E3FF" Grid.Column="1" Grid.Row="1" CornerRadius="5" BorderBrush="DarkSlateGray" BorderThickness="0.6">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.5" />
                </Border.Effect>
            </Border>
            <TextBox Name="TimeUpInput" Text="07:00" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderThickness="0" FontSize="12" Margin="1,1,1,1"/>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.9*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border Background="#FFE3E3FF" Grid.Column="1" Grid.Row="1" CornerRadius="5" BorderBrush="DarkSlateGray" BorderThickness="0.6">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.5" />
                </Border.Effect>
            </Border>
            <TextBox Name="TimeDownInput" Text="16:00" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderThickness="0" FontSize="12" Margin="1,1,1,1"/>
        </Grid>

    </Grid>
</UserControl>
