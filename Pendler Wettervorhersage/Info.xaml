<Window x:Class="Pendler_Wettervorhersage.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pendler_Wettervorhersage"
        mc:Ignorable="d"
        Title="Info" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="BrightRoundedBorder" TargetType="Border">
            <Setter Property="Background" Value="#FDFEFC"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="2"/>

        </Style>
    </Window.Resources>
        
    
    <Grid Background="#608BC1">
       
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#133E87" Width="400" Height="50" CornerRadius="10" BorderBrush="#FDFEFC" BorderThickness="1">
            <TextBlock Text="Pendler Wettervorhersage" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="Transparent" Foreground="#FDFEFC"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="26">
             
        </TextBlock>
        </Border>
        <TextBlock Text="Programmiert von Christian Zenger" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        


        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="1">
            <Viewbox Grid.Column="1" VerticalAlignment="Center" Margin="2">
                <local:WeatherInfoPanelView DataContext="{Binding Info}" Width="150" Height="110"/>
            </Viewbox>


                <Border Style="{StaticResource BrightRoundedBorder}" Width="360">
                <Grid>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="0.1*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="  - Der Tag" Grid.Row="0" Panel.ZIndex="1" FontSize="14" />
                    <TextBlock Text="  - Beschreibung des Wetters (von der API)" Grid.Row="1" Grid.Column="1" Panel.ZIndex="1" FontSize="14"/>
                    <TextBlock Text="  - erwartete Temperatur" Grid.Row="2" Panel.ZIndex="1" FontSize="14"/>
                    <TextBlock Text="  - gefühlte Temperatur" Grid.Row="3" Panel.ZIndex="1" FontSize="14"/>
                    <TextBlock Text="  - Niederschlagwahrscheinlichkeit für Regen und Schnee" Grid.Row="4" Panel.ZIndex="1" FontSize="14"/>
                </Grid>
            </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                <Border Style="{StaticResource BrightRoundedBorder}" Width="150">
                    <TextBlock Text="  Api Standort Antwort" FontSize="14" />
                </Border>
                <Border Style="{StaticResource BrightRoundedBorder}" Width="360" Height="30">
                    <TextBlock Text="  Information um Eingabestandort und Api Standort&#10; zu vergleichen" xml:space="preserve" FontSize="14"/>
                </Border>


            </StackPanel>
            
            
            
        </Grid>
        
        
        
        
    </Grid>
</Window>
